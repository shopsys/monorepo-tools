{% extends '@ShopsysFramework/Admin/Layout/layoutWithPanel.html.twig' %}

{% block title %}{{ '- Heureka - Verified by Customer'|trans }}{% endblock %}
{% block h1 %}{{ 'Heureka - Verified by Customer'|trans }}{% endblock %}

{% block main_content %}
    {{ render(controller('ShopsysFrameworkBundle:Admin/Domain:domainTabs')) }}

    {% if form is not null %}
        {{ form_start(form) }}

            {% embed '@ShopsysFramework/Admin/Inline/FixedBar/fixedBar.html.twig' %}
                {% block fixed_bar_content %}
                    {{ form_widget(form.save, { label: 'Save changes'|trans }) }}
                {% endblock %}
            {% endembed %}
        {{ form_end(form) }}
    {% else %}
        <div class="in-message in-message--info">
            {{ 'Heureka - Verified by Customer service does not support the language of this domain.'|trans }}
        </div>
    {% endif %}
{% endblock %}
