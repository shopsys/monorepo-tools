{% extends '@ShopsysShop/Front/Layout/layoutWithoutPanel.html.twig' %}

{% block meta_robots -%}
    <meta name="robots" content="noindex, follow">
{% endblock %}

{% block title %}
    {{ 'Login'|trans }}
{% endblock %}

{% block main_content %}

    {{ form_start(form, {attr: {'multipleForm': true}}) }}
    {{ form_errors(form, {errors_attr: { class: 'in-message--alert' }}) }}

        <h1>{{ 'Login'|trans }}</h1>


        <dl class="form-line">
            <dt>
                {{ form_label(form.email) }}
            </dt>
            <dd>
                {{ form_widget(form.email) }}
            </dd>
        </dl>

        <dl class="form-line">
            <dt>
                {{ form_label(form.password) }}
            </dt>
            <dd>
                {{ form_widget(form.password) }}
            </dd>
        </dl>

        <dl class="form-line">
            <dt></dt>
            <dd>
                <label class="form-choice">
                    <span class="form-choice__input">
                        {{ form_widget(form.rememberMe) }}
                    </span>
                    <span class="form-choice__label">
                        {{ 'Remember my login'|trans }}
                        <i class="svg svg-info in-icon in-icon--info js-tooltip"
                           data-toggle="tooltip"
                           data-placement="right"
                           title="{{ 'We will remember your login on this computer for 30 days.'|trans }}"
                        ></i>
                    </span>
                </label>
            </dd>
        </dl>

        <dl class="form-line">
            <dt></dt>
            <dd>
                {{ form_widget(form.login, {label: 'Log in'|trans}) }}
            </dd>
        </dl>
        <dl class="form-line">
            <dt></dt>
            <dd>
                <a href="{{ url('front_registration_reset_password') }}">{{ 'Forgot your password?'|trans }}</a>
            </dd>
        </dl>

    {{ form_end(form) }}

{% endblock %}