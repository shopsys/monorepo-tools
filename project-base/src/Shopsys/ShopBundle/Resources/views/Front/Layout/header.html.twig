{% block header %}

    {% set shopInfoPhoneNumber = getShopInfoPhoneNumber() %}
    {% set shopInfoPhoneHours = getShopInfoPhoneHours() %}
    {% set shopInfoEmail = getShopInfoEmail() %}

    <header class="header">
        <div class="header__logo">
            {% block logo %}
                <a class="logo" href="{{ url('front_homepage') }}" title="{{ 'Online shop'|trans }}"></a>
            {% endblock %}
        </div>

        <div class="header__middle">
            {{ render(controller('ShopsysShopBundle:Front/Search:box')) }}
            {% if shopInfoPhoneNumber is not null or shopInfoPhoneHours is not null or shopInfoEmail is not null %}
                <div class="contact-us">
                    {% if shopInfoPhoneNumber is not null %}
                        <span class="contact-us__phone">
                            <i class="svg svg-phone"></i>
                            {{ shopInfoPhoneNumber }}
                        </span>
                    {% endif %}
                    {% if shopInfoPhoneHours is not null %}
                        <span class="contact-us__days">
                            {{ shopInfoPhoneHours }}
                        </span>
                    {% endif %}
                    {% if shopInfoEmail is not null %}
                        <span class="contact-us__email">
                            {{ shopInfoEmail }}
                        </span>
                    {% endif %}
                </div>
            {% endif %}
        </div>

        <div class="header__mobile">
            <span class="btn-tap btn-tap--menu js-responsive-toggle" data-element="js-categories" data-hide-on-click-out="true">
                <span class="btn-tap__in">
                    <i class="svg svg-burger-menu"></i>
                    {{ 'Menu'|trans }}
                </span>
            </span>

            {% if shopInfoPhoneNumber is not null %}
                <span class="btn-tap">
                    <a href="tel:{{ shopInfoPhoneNumber }}" class="btn-tap__in">
                        <i class="svg svg-phone"></i>
                    </a>
                </span>
            {% endif %}

            <span class="btn-tap">
                {% if is_granted('ROLE_CUSTOMER') %}
                    <a href="{{ url('front_customer_edit') }}" class="btn-tap__in">
                        <i class="svg svg-user"></i>
                    </a>
                {% else %}
                    <a href="{{ url('front_login') }}"
                        onclick="Shopsys.window({ content: '{{ render(controller('ShopsysShopBundle:Front/Login:windowForm'))|escape('js') }}' }); return false;"
                        class="btn-tap__in">
                        <i class="svg svg-user"></i>
                    </a>
                {% endif %}
            </span>
        </div>

        <div class="header__cart">
            {{ render(controller('ShopsysShopBundle:Front/Cart:box')) }}
        </div>

        <div class="header__top">
            <div class="header__top__left">
                {{ render(controller('ShopsysShopBundle:Front/Article:menu')) }}
            </div>

            <div class="header__top__right">
                <ul class="menu-iconic">
                    {% if is_granted('ROLE_CUSTOMER') %}
                        <li class="menu-iconic__item">
                            <a href="{{ url('front_customer_edit') }}" class="menu-iconic__item__link">
                                <i class="svg svg-user"></i>
                                <span>
                                    {{ app.user.firstName }} {{ app.user.lastName }}
                                </span>
                            </a>
                            <ul class="menu-iconic__sub">
                                <li class="menu-iconic__sub__item">
                                    <a href="{{ url('front_customer_edit') }}" class="menu-iconic__sub__item__link">{{ 'Personal data'|trans }}</a>
                                </li>
                                <li class="menu-iconic__sub__item">
                                    <a href="{{ url('front_customer_orders') }}" class="menu-iconic__sub__item__link">{{ 'My orders'|trans }}</a>
                                </li>
                            </ul>
                        </li>
                        <li class="menu-iconic__item">
                            <a href="{{ url('front_logout', { _csrf_token: csrf_token('frontend_logout')}) }}" class="menu-iconic__item__link">
                                <span>
                                    {{ 'Log out'|trans }}
                                </span>
                            </a>
                        </li>
                    {% else %}
                        <li class="menu-iconic__item">
                            <a
                                href="{{ url('front_login') }}"
                                onclick="Shopsys.window({ content: '{{ render(controller('ShopsysShopBundle:Front/Login:windowForm'))|escape('js') }}' }); return false;"
                                class="menu-iconic__item__link"
                            >
                                <i class="svg svg-user"></i>
                                <span>
                                    {{ 'Log in'|trans }}
                                </span>
                            </a>
                        </li>
                        <li class="menu-iconic__item">
                            <a href="{{ url('front_registration_register') }}" class="menu-iconic__item__link">
                                <span>
                                    {{ 'Registration'|trans }}
                                </span>
                            </a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </header>

    {{ render(controller('ShopsysShopBundle:Front/Advert:box',{'positionName' : constant('Shopsys\\ShopBundle\\Model\\Advert\\Advert::POSITION_HEADER')})) }}
{% endblock %}