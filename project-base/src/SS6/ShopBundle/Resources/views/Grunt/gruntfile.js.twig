				tasks: ['less:helpersAdmin']
			},
			adminSprite: {
				files: ['web/assets/admin/images/icons/**/*.png'],
				tasks: ['sprite:admin'],
				options: {
					livereload: true
				}
			},
			adminWebfont: {
				files: ['src/SS6/ShopBundle/Resources/svg/admin/*.svg'],
				tasks: ['webfont:admin'],
				options: {
					livereload: true
				}
