module.exports = function(grunt) {

	require('es6-promise').polyfill();
	require('jit-grunt')(grunt, {
		sprite: 'grunt-spritesmith',
		sprite: 'pngsmith',
	});
	require('time-grunt')(grunt);

	grunt.initConfig({

		pkg: grunt.file.readJSON('package.json'),

		less: {
