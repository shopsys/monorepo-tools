			frontendSprite: {
				files: ['web/assets/frontend/images/icons/**/*.png'],
				tasks: ['sprite:frontend'],
				options: {
					livereload: true
				}
			},
			frontendWebfont: {
				files: ['src/SS6/ShopBundle/Resources/svg/front/*.svg'],
				tasks: ['webfont:frontend']
