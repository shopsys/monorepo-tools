					sourceMapRootpath: '../../../'
				}
			},

			{% for domain in domains -%}
				helpers{{ domain.id }}: {
					files: {
						'{{ (rootStylesDirectory ~ '/front/' ~ domain.stylesDirectory)|raw }}/helpers/helpers-generated.less': '{{ (rootStylesDirectory ~ '/front/' ~ domain.stylesDirectory)|raw }}/helpers.less'
