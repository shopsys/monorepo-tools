{% import '@SS6Shop/Front/Content/Product/productListMacro.html.twig' as productList %}
{% import '@SS6Shop/Front/Inline/Paginator/paginator.html.twig' as paginator %}

{% if paginationResult.results|length > 0 %}
	<div class="js-product-list-with-paginator">
		{% set entityName = 'zboží'|trans %}
		{{ paginator.paginatorNavigation(paginationResult, entityName) }}

		{{ productList.list(paginationResult.results) }}

		<div class="h-text-center">
			<input type="button" class="js-load-more-button btn"
				data-page="{{ paginationResult.page }}"
				data-total-count="{{ paginationResult.totalCount }}"
				data-page-size="{{ paginationResult.pageSize }}"
				data-pagination-to-item="{{ paginationResult.toItem }}"
			/>
		</div>

		{{ paginator.paginatorNavigation(paginationResult, entityName) }}
	</div>
{% else %}
	<div class="in-message in-message--info">
		{% if (filterFormSubmited) %}
			{{ 'Filtru neodpovídají žádné výsledky'|trans }}
		{% elseif searchText is defined %}
			{{ 'Hledání neodpovídají žádné produkty'|trans }}
		{% else %}
			{{ 'Tato kategorie neobsahuje žádné produkty'|trans }}
		{% endif %}
	</div>
{% endif %}